<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:layout_anchor="@id/inc_logo"
    app:layout_anchorGravity="bottom|end"
    app:layout_collapseMode="parallax"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/wind_speed_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        android:tint="?attr/colorBackgroundFloating"
        app:srcCompat="@drawable/ic_wind" />

    <TextView
        android:id="@+id/wind_speed_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="@string/three_dots"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/press_ImageView"
        android:layout_width="49dp"
        android:layout_height="match_parent"
        android:tint="?attr/colorBackgroundFloating"
        app:srcCompat="@drawable/ic_wi_barometer" />

    <TextView
        android:id="@+id/press_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="@string/three_dots"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="18sp" />
</LinearLayout>